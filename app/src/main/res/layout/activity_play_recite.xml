<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="kilanny.shamarlymushaf.PlayReciteActivity">
    <TextView
        android:layout_weight="2"
        android:id="@+id/textViewSurahName"
        android:textSize="40sp"
        android:ellipsize="end"
        android:singleLine="true"
        android:gravity="center"
        android:textColor="@android:color/holo_blue_dark"
        android:text="سورة آل عمران"
        android:layout_width="match_parent"
        android:layout_height="0dp" />
    <TextView
        android:layout_weight="1"
        android:id="@+id/textViewAyahNumber"
        android:textSize="30sp"
        android:ellipsize="end"
        android:singleLine="true"
        android:gravity="center"
        android:text="آية 152"
        android:layout_width="match_parent"
        android:layout_height="0dp" />
    <TextView
        android:id="@+id/textViewReciter"
        android:textSize="20sp"
        android:layout_weight="2"
        android:ellipsize="end"
        android:singleLine="true"
        android:gravity="center"
        android:textColor="@android:color/holo_green_dark"
        android:text="عبد الباسط عبد الصمد (المجود)"
        android:layout_width="match_parent"
        android:layout_height="0dp" />
    <ProgressBar
        android:layout_weight=".75"
        android:id="@+id/progressBarLoadingRecite"
        android:indeterminateDrawable="@android:drawable/progress_indeterminate_horizontal"
        android:minHeight="24dip"
        android:indeterminate="true"
        android:maxHeight="24dip"
        android:layout_width="fill_parent"
        android:layout_height="0dp"/>
    <View
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
    <TextView
        android:layout_weight="1"
        android:gravity="center"
        android:textSize="20sp"
        android:text="إيقاف التلاوة تلقائيا بعد"
        android:layout_width="match_parent"
        android:layout_height="0dp" />
    <TextView
        android:id="@+id/textViewTiming"
        android:textSize="40sp"
        android:layout_weight="2"
        android:gravity="center"
        android:text="00:05:34"
        android:layout_width="match_parent"
        android:layout_height="0dp" />
    <TextView
        android:id="@+id/textViewError"
        android:textSize="10sp"
        android:layout_weight="2"
        android:visibility="invisible"
        android:textColor="@android:color/holo_red_dark"
        android:text="حدث خطأ أثناء محاولة تشغيل الملف"
        android:layout_width="match_parent"
        android:layout_height="0dp" />
    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <ImageButton
            android:src="@android:drawable/ic_media_pause"
            android:scaleType="fitXY"
            android:layout_weight="1"
            android:id="@+id/imageButtonPause"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <ImageButton
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:scaleType="fitXY"
            android:layout_weight="1"
            android:id="@+id/imageButtonStop"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
    </LinearLayout>
</LinearLayout>
