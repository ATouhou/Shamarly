<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="kilanny.shamarlymushaf.HelpActivity">
    <TabHost
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tabHostHelp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <HorizontalScrollView android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:fillViewport="true"
                android:scrollbars="none">
                <TabWidget
                    android:id="@android:id/tabs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </TabWidget>
            </HorizontalScrollView>
            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout android:id="@+id/حول"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <ScrollView
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:scrollbars="vertical"
                        android:fillViewport="true">
                        <TextView android:textSize="20dp"
                            android:paddingRight="10dp"
                            android:paddingEnd="10dp"
                            android:id="@+id/helpTextAbout"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content" />
                    </ScrollView>
                </LinearLayout>
                <LinearLayout android:id="@+id/المصحف"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <ScrollView
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:scrollbars="vertical"
                        android:fillViewport="true">
                        <TextView android:textSize="20dp"
                            android:paddingRight="10dp"
                            android:paddingEnd="10dp"
                            android:id="@+id/helpTextMushaf"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content" />
                    </ScrollView>
                </LinearLayout>
                <LinearLayout android:id="@+id/التلاوة"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <ScrollView
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:scrollbars="vertical"
                        android:fillViewport="true">
                        <TextView android:textSize="20dp"
                            android:paddingRight="10dp"
                            android:paddingEnd="10dp"
                            android:id="@+id/helpTextRecite"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content" />
                    </ScrollView>
                </LinearLayout>
                <LinearLayout android:id="@+id/أخرى"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <ScrollView
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:scrollbars="vertical"
                        android:fillViewport="true">
                        <TextView android:textSize="20dp"
                            android:paddingRight="10dp"
                            android:paddingEnd="10dp"
                            android:id="@+id/helpTextOther"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content" />
                    </ScrollView>
                </LinearLayout>
                <LinearLayout android:id="@+id/رسالة"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <ScrollView
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:scrollbars="vertical"
                        android:fillViewport="true">
                        <TextView android:textSize="20dp"
                            android:paddingRight="10dp"
                            android:paddingEnd="10dp"
                            android:id="@+id/helpTextMsg"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content" />
                    </ScrollView>
                </LinearLayout>
            </FrameLayout>
    </LinearLayout>
    </TabHost>
</RelativeLayout>
